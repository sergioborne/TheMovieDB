<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:id="@+id/container"    android:layout_width="@dimen/tv_show_details_similar_item_width"    android:layout_height="match_parent"    android:background="?android:attr/selectableItemBackground"    android:clickable="true"    android:focusable="true">  <ImageView      android:id="@+id/similar_tv_show_image"      android:layout_width="match_parent"      android:layout_height="@dimen/tv_show_details_similar_item_image_height"      android:layout_marginEnd="@dimen/default_margin"      android:layout_marginStart="@dimen/default_margin"      android:adjustViewBounds="true"      app:layout_constraintEnd_toEndOf="parent"      app:layout_constraintStart_toStartOf="parent"      app:layout_constraintTop_toTopOf="parent"      app:srcCompat="@mipmap/ic_launcher_round"  />  <TextView      android:id="@+id/similar_tv_show_title"      android:layout_width="match_parent"      android:layout_height="wrap_content"      android:layout_marginEnd="@dimen/default_margin"      android:layout_marginStart="@dimen/default_margin"      android:ellipsize="end"      android:lines="2"      android:maxLines="2"      android:textColor="@android:color/black"      android:textSize="15sp"      app:layout_constraintEnd_toEndOf="@+id/similar_tv_show_image"      app:layout_constraintStart_toStartOf="@+id/similar_tv_show_image"      app:layout_constraintTop_toBottomOf="@+id/similar_tv_show_image"      tools:text="Movie Title"  /></android.support.constraint.ConstraintLayout>